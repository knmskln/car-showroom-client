<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.user.ChangePasswordController">
   <PasswordField fx:id="currentPassword" layoutX="80.0" layoutY="59.0" promptText="Текущий пароль">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <PasswordField fx:id="newPassword" layoutX="80.0" layoutY="106.0" promptText="Новый пароль">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <PasswordField fx:id="confirmedPassword" layoutX="80.0" layoutY="153.0" promptText="Повторите пароль">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <Button fx:id="save" layoutX="60.0" layoutY="200.0" mnemonicParsing="false" style="-fx-background-color: pink;" text="Сохранить">
      <font>
         <Font name="Georgia" size="16.0" />
      </font>
   </Button>
   <Button fx:id="cancel" layoutX="237.0" layoutY="200.0" mnemonicParsing="false" style="-fx-background-color: pink;" text="Отмена">
      <font>
         <Font name="Georgia" size="16.0" />
      </font>
   </Button>
</AnchorPane>
